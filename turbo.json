{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "outputs": ["coverage/**", "test-results/**"]
    },
    "test:ci": {
      "outputs": ["coverage/**", "test-results/**"]
    },
    "e2e": {
      "dependsOn": ["build"],
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "fmt": {
      "outputs": []
    },
    "fmt:fix": {
      "outputs": []
    },
    "type-check": {
      "outputs": []
    },
    "spell": {
      "outputs": []
    },
    "typedoc": {
      "outputs": ["docs-api/**"]
    },
    "clean": {
      "cache": false
    }
  }
}