{
  "name": "@study-github-agent/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "GitHub Copilot agentを学習するためのmonorepoプロジェクト",
  "keywords": [
    "monorepo",
    "react",
    "vite",
    "typescript",
    "github-copilot"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "format": "turbo run format && pnpm run format:package",
    "format:check": "turbo run format:check && pnpm run format:package --check",
    "format:package": "sort-package-json package.json apps/*/package.json packages/*/package.json",
    "lint": "turbo run lint",
    "pre-commit": "turbo run lint format:check build && pnpm run spell-check",
    "prepare": "husky",
    "spell-check": "turbo run spell-check",
    "test": "turbo run test",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "husky": "9.1.7",
    "sort-package-json": "3.2.1",
    "turbo": "2.5.4",
    "wrangler": "4.18.0"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
