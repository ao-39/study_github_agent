{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist-node",
    "declaration": true
  },
  "include": ["vite.config.ts", "playwright.config.ts"],
  "exclude": ["src/**/*"]
}
